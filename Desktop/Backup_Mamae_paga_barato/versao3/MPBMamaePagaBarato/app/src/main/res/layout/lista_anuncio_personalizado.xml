<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/lista_anuncio_personalizada_imagem_produto"
        android:layout_width="70dp"
        android:layout_height="match_parent" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/lista_anuncio_personalizada_nome_produto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="Nome"
            android:textSize="15dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/lista_anuncio_personalizada_sub_categoria"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="Sub Categoria"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/lista_anuncio_personalizada_descricao_produto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="Descrição"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/lista_anuncio_personalizada_loja"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="Loja"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/lista_anuncio_personalizada_preco_produto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="Preço"
            android:textColor="@android:color/holo_red_dark"
            android:textSize="15dp"
            android:textStyle="bold" />


    </LinearLayout>

</LinearLayout>
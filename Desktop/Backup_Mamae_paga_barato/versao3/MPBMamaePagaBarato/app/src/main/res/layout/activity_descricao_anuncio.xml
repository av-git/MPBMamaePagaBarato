<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/activity_descricao_anuncio"
    android:weightSum="1">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="30dp"
        android:text="@string/qualDescricaoSeuAnuncio"
        android:textSize="20sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/formulario_descricao_anuncio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:focusable="true"
        android:hint="@string/exemplo_preencher_descricao_anuncio"
        android:textSize="20sp" />

    <Button
        android:id="@+id/idbotaoProximoDescricaoAnuncio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:onClick="irParaFormularioPrecoAnuncio"
        android:text="@string/proximo" />

</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout

        android:id="@+id/activity_resumo_anuncio"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="1">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:paddingTop="16dp"
            android:text="@string/titulo_produto"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/resumo_anuncio_titulo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:paddingLeft="16dp"
            android:paddingRight="16dp" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:paddingTop="16dp"
            android:text="@string/categoria_produto"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/resumo_anuncio_categoria"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="16dp"
            android:paddingRight="16dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:paddingTop="16dp"
            android:text="@string/preco_produto"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/resumo_anuncio_preco"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="numberDecimal"
            android:paddingLeft="16dp"
            android:paddingRight="16dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:paddingTop="16dp"
            android:text="Informações da Loja"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/resumo_anuncio_nome_loja"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="16dp"
            android:paddingRight="16dp" />

        <TextView
            android:id="@+id/resumo_anuncio_endereco_loja"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="16dp"
            android:paddingRight="16dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:text="Fone" />

        <TextView
            android:id="@+id/resumo_anuncio_fone_loja"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="16dp"
            android:paddingRight="16dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:paddingTop="16dp"
            android:text="Comentário"
            android:textSize="16sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/resumo_anuncio_descricao"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/exemplo_preencher_descricao_anuncio"
            android:maxLines="4"
            android:paddingLeft="16dp"
            android:paddingRight="16dp" />


    </LinearLayout>
</ScrollView>

<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout

        android:id="@+id/activity_foto_anuncio"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="225dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:src="@drawable/foto"
                android:background="#00A8EC" />

            <Button
                android:id="@+id/formulario_foto_botao_foto"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:background="@drawable/botao_flutuante_foto"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_marginRight="16dp"/>


        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/titulo_produto" />

        <EditText
            android:id="@+id/formulario_produto_titulo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/descricao_produto" />

        <EditText
            android:id="@+id/formulario_produto_descricao"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="4" />

        <Button
            android:id="@+id/idbotaoProximoDescricaoAnuncio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:onClick="irParaFormularioCategoriaAnuncio"
            android:text="@string/proximo" />

    </LinearLayout>
</ScrollView>
